<?xml version="1.0" encoding="UTF-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >

    <gradient
        android:angle="90"
        android:startColor="#202020"
        android:centerColor="#4b4b4b"
        android:endColor="#c1c1c1"
        android:type="linear" />
    <!--angle은 0,45,90,180,270,360도 이렇게 선택 가능한 듯
    type은 sweep도 있는듯. 중앙을 기준으로 360도-->
</shape>
    <!--이 경로 폴더 누르고 New-Drawable resource file-파일명.xml 이라고 쓰면 된다~-->